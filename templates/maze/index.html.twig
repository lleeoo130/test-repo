{% extends 'base.html.twig' %}

{% block title %}Hello MazeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Mazes Management</h1>

    <a href="{{ path('app_maze_creator') }}">create maze</a>

    {% if mazes is defined and mazes is empty %}
        <p>You have no maze</p>

    {% else %}
        {% for maze in mazes %}
            <p> {{ maze.id }} </p>
        {% endfor %}

    {% endif %}


</div>
{% endblock %}
